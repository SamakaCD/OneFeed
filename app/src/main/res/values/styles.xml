<resources>

	<style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/colorBackground</item>
	</style>

	<style name="AppTheme.NonBranded" parent="AppTheme">
		<item name="colorPrimary">@color/colorBackground</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkNonBranded</item>
		<item name="actionBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
	</style>

	<style name="AppTheme.InitialSetup" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">@color/colorPrimaryDarkNonBranded</item>
	</style>
</resources>
